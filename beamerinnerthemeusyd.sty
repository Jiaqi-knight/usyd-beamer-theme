\defbeamertemplate*{title page}{usyd}[1][]
{%
    \vskip-1cm
    \begin{beamercolorbox}[leftskip=1.5cm, rightskip=1cm, #1]{title page header}
        \usebeamerfont{title} \inserttitle\par%
        \vskip1cm
        \usebeamerfont{subtitle}\insertsubtitle\par%
    \end{beamercolorbox}
    \vfill
    \begin{beamercolorbox}[leftskip=6cm, rightskip=0.5cm, right, #1]{author}
        \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
}

\defbeamertemplate*{footline}{usyd}
{%
    \begin{beamercolorbox}[ht=2.5ex,dp=3.75ex,center]{section in head/foot}
        \ifnum\thepage>1%
        \begin{tikzpicture}
            \draw[usydred] (0.3, 2.5) -- (\paperwidth-0.3cm, 2.5);
        \end{tikzpicture}
        \vskip3px
        \insertnavigation{\paperwidth}
      \fi
    \end{beamercolorbox}%
}%

